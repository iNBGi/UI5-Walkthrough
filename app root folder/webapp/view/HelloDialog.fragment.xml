<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="helloDialog"
        title="Hello {/recipient/name}">
        <content>
            <VBox class="sapUiSmallMargin">
                <Text text="Welcome to the dialog!"/>
                <Text text="This is an example of adding content."/>
            </VBox>
            <core:Icon
            src="sap-icon://hello-world"
            size="4rem"
            class="sapUiMediumMargin"/>
        </content>
        <beginButton>
            <Button
                text="{i18n>dialogCloseButtonText}"
                press=".onCloseDialog"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
